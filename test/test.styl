@import "./bootstrap-styl/index.styl"
primary = #06a2d0;
default = #fff
gray = #ddd
disabled = #ccc

.calendar-action

  &-prev, &-next
    &:before
      content ''
      display: block
      width 32px
      height 32px
      border 2px primary solid
      transform rotate(45deg) scale(.5)
    cursor pointer
    &:hover
      background-color #ddd
  &-disabled
    &:before
      border-color disabled
  &-prev
    &:before
      border-top: none
      border-right: none

  &-next
    &:before
      border-left none
      border-bottom none

  span
    display: none

.highlight
  color primary

.start-date

  background darkslategrey !important

.end-date
  background darkcyan !important

.popup
  display: none

.toolbar
  margin auto
  width 320px
  height: 34px
  position: relative
  display: block
  .form-control
    padding-top: 0
    padding-bottom:0
    line-height 34px
    border-radius 4px !important

  .input-group-addon
    position: absolute
    top: 1px
    right: 1px
    bottom: 1px
    z-index: 9
    width auto
    line-height 32px
    padding: 0
    padding-right: 12px
    border: none


