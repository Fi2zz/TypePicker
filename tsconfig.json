{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "noImplicitAny": false,
    "target": "es3",
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "pretty": true,
    "allowJs": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "lib": ["dom", "es6"]
  },

  "files": [
    "./src/index.ts",
    "./src/core.ts",
    "./src/helpers.ts",
    "./src/dom.helper.ts",
    "./src/template.ts",
    "./src/typepicker.d.ts"
  ],
  "plugins": [
    {
      "transform": "typescript-transform-macros"
    }
  ]
}
