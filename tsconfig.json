{
  "compilerOptions": {
    "outDir": "temp",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "ES6",
    "target": "es5",
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "pretty": true,
    "allowJs": true,
    "removeComments": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./test/**/*"
  ]
}
