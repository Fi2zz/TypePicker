{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "noImplicitAny": false,
    "target": "es3",
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "pretty": true,
    "allowJs": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "lib": ["dom", "es6"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./test/**/*"]
}
